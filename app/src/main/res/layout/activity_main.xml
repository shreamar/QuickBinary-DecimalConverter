<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.apps.gundu.quickbinary_decimalconverter.MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Decimal Values"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5sp"
            android:paddingTop="5sp">

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin16"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="16"
                android:text="64" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin15"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="15"
                android:text="32" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin14"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="14"
                android:text="16" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin13"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="13"
                android:text="8" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin12"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="12"
                android:text="4" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin11"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="11"
                android:text="2" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin10"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="10"
                android:text="1" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Binary Places"
            android:textAlignment="center"
            android:textColor="@android:color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5sp"
            android:paddingTop="5sp">

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin6"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="6"
                android:text="0" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="5"
                android:text="0" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="4"
                android:text="0" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="3"
                android:text="0" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="2"
                android:text="0" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="1"
                android:text="0" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/bin0"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="binaryButton"
                android:tag="0"
                android:text="0" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Binary Number System"
                android:textAlignment="center"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/binaryNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0000000"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="70dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decimal Number System"
                android:textAlignment="center"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/decimalIntermediate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/decimalFinal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@android:color/holo_purple"
                android:textSize="100dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
